    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.3",
    "@types/ws": "^6.0.1",
    "jest": "^24.7.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.1",
    "typescript": "^3.3.3333"
  }
