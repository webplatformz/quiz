{
  "name": "quiz",
  "version": "1.0.0",
  "description": "Quiz platform to create live quizzes.",
  "main": "server/index.ts",
  "scripts": {
    "test": "npm-run-all --parallel test:*",
    "test:backend": "npm test --prefix server",
    "clean": "rimraf frontend/build server/build",
